<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#00000000" />

    <LinearLayout
        android:id="@+id/reminderBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/deadline_background_normal"
        android:orientation="horizontal" >

        <View
            android:id="@+id/reminderPriorityIndicator"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="#ff99cc00" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="3dp" >

            <TextView
                android:id="@+id/textViewReminderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Title"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textViewReminderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Date" />

            <TextView
                android:id="@+id/textViewReminderGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="2dp"
                android:text="Group" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#00ddff" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textViewReminderDaysRem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11"
                    android:textColor="#ff4444"
                    android:textSize="40sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="days"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#88000000" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewReminderNotificationDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="notify at 11/3/2014" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>