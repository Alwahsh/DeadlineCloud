<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="asuspt.deadlinecloud"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="asuspt.deadlinecloud.activities.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="asuspt.deadlinecloud.activities.DeadlinesActivity"
            android:label="@string/title_activity_deadlines"
            android:parentActivityName="asuspt.deadlinecloud.activities.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="asuspt.deadlinecloud.activities.HomeActivity" />
        </activity>
        <activity
            android:name="asuspt.deadlinecloud.activities.AddDeadlineActivity"
            android:label="Add Deadline"
            android:parentActivityName="asuspt.deadlinecloud.activities.HomeActivity"
            android:theme="@style/Theme.UserDialog" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="asuspt.deadlinecloud.activities.HomeActivity" />
        </activity>
        <activity
            android:name="asuspt.deadlinecloud.SyncActivity"
            android:label="@string/title_activity_sync"
            android:parentActivityName="asuspt.deadlinecloud.activities.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="asuspt.deadlinecloud.activities.HomeActivity" />
        </activity>
    </application>

</manifest>
